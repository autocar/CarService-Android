<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5eee3"
    tools:context="com.ruhoon.jiayu.merchant.activity.ModificationPasswordActivity"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_140_px" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_140_px"
            android:background="#ff805b"
            android:text="修改密码"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_54_px" />

        <Button
            android:id="@+id/bt_back_ModifyPass"
            android:layout_width="@dimen/size_123_px"
            android:layout_height="@dimen/size_140_px"
            android:background="@drawable/bt_forgotpassword_back" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_modify_oldePass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_134_px"
        android:layout_below="@+id/title"
        android:layout_marginLeft="@dimen/size_40_px"
        android:layout_marginRight="@dimen/size_40_px"
        android:layout_marginTop="@dimen/size_32_px"
        android:background="@drawable/edittext_corner"
        android:hint="请输入原密码"
        android:paddingLeft="@dimen/size_37_px"
        android:textColor="#999999"
        android:textSize="@dimen/text_50_px" />

    <EditText
        android:id="@+id/et_modify_newPass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_134_px"
        android:layout_below="@+id/et_modify_oldePass"
        android:layout_marginLeft="@dimen/size_40_px"
        android:layout_marginRight="@dimen/size_40_px"
        android:layout_marginTop="@dimen/size_33_px"
        android:background="@drawable/edittext_corner"
        android:hint="请输入新密码"
        android:paddingLeft="@dimen/size_37_px"
        android:textColor="#999999"
        android:textSize="@dimen/text_50_px" />

    <EditText
        android:id="@+id/et_modify_renewPass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_134_px"
        android:layout_below="@+id/et_modify_newPass"
        android:layout_marginLeft="@dimen/size_40_px"
        android:layout_marginRight="@dimen/size_40_px"
        android:layout_marginTop="@dimen/size_33_px"
        android:background="@drawable/edittext_corner"
        android:hint="请确认新密码"
        android:paddingLeft="@dimen/size_37_px"
        android:textColor="#999999"
        android:textSize="@dimen/text_50_px" />

    <Button
        android:id="@+id/bt_modifyComplete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_134_px"
        android:layout_below="@+id/et_modify_renewPass"
        android:layout_marginLeft="@dimen/size_123_px"
        android:layout_marginRight="@dimen/size_123_px"
        android:layout_marginTop="@dimen/size_134_px"
        android:background="@drawable/bt_fogot_pw_comp_bg"
        android:text="完成"
        android:textColor="#ff8000"
        android:textSize="@dimen/text_64_px" />

</RelativeLayout>