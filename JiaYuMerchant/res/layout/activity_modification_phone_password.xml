<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5eee3"
    tools:context="com.ruhoon.jiayu.merchant.activity.ModificationPhoneActivity"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_140_px" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_140_px"
            android:background="#ff805b"
            android:text="修改手机号"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_54_px" />

        <Button
            android:id="@+id/bt_back_ModifyPhone"
            android:layout_width="@dimen/size_123_px"
            android:layout_height="@dimen/size_140_px"
            android:background="@drawable/bt_forgotpassword_back" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_oldPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_134_px"
        android:layout_below="@+id/rl_title"
        android:layout_marginLeft="@dimen/size_40_px"
        android:layout_marginRight="@dimen/size_40_px"
        android:layout_marginTop="@dimen/size_32_px"
        android:background="@drawable/edittext_corner"
        android:hint="请输入旧手机号"
        android:inputType="phone"
        android:paddingLeft="@dimen/size_38_px"
        android:textColor="#999999"
        android:textSize="@dimen/text_50_px" />

    <RelativeLayout
        android:id="@+id/rl_code1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_134_px"
        android:layout_below="@+id/et_oldPhoneNumber"
        android:layout_marginLeft="@dimen/size_40_px"
        android:layout_marginRight="@dimen/size_40_px"
        android:layout_marginTop="@dimen/size_32_px"
        android:background="@drawable/edittext_corner" >

        <EditText
            android:id="@+id/et_oldVerificationCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/bt_oldGetVerification"
            android:hint="请输入验证码"
            android:textColor="#999999"
            android:textSize="@dimen/text_50_px" />

        <Button
            android:id="@+id/bt_oldGetVerification"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_125_px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_34_px"
            android:background="#ffffff"
            android:text="获取验证码"
            android:textColor="#ff8000" />
    </RelativeLayout>

    <EditText
        android:id="@+id/et_newPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_134_px"
        android:layout_below="@+id/rl_code1"
        android:layout_marginLeft="@dimen/size_40_px"
        android:layout_marginRight="@dimen/size_40_px"
        android:layout_marginTop="@dimen/size_32_px"
        android:background="@drawable/edittext_corner"
        android:hint="请输入新手机号"
        android:inputType="phone"
        android:paddingLeft="@dimen/size_38_px"
        android:textColor="#999999"
        android:textSize="@dimen/text_50_px" />

    <RelativeLayout
        android:id="@+id/rl_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_134_px"
        android:layout_below="@+id/et_newPhoneNumber"
        android:layout_marginLeft="@dimen/size_40_px"
        android:layout_marginRight="@dimen/size_40_px"
        android:layout_marginTop="@dimen/size_32_px"
        android:background="@drawable/edittext_corner" >

        <EditText
            android:id="@+id/et_newVerificationCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/bt_newGetVerification"
            android:hint="请输入验证码"
            android:textColor="#999999"
            android:textSize="@dimen/text_50_px" />

        <Button
            android:id="@+id/bt_newGetVerification"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_125_px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_34_px"
            android:background="#ffffff"
            android:text="获取验证码"
            android:textColor="#ff8000" />
    </RelativeLayout>

    <Button
        android:id="@+id/bt_modifyPhone_complete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_134_px"
        android:layout_below="@+id/rl_code"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/size_123_px"
        android:layout_marginRight="@dimen/size_123_px"
        android:layout_marginTop="@dimen/size_134_px"
        android:background="@drawable/bt_fogot_pw_comp_bg"
        android:text="完成"
        android:textColor="#ff8000"
        android:textSize="@dimen/text_64_px" />

</RelativeLayout>